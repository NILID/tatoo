%h3 Editing profile

= form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :tatoo_size
    = f.number_field :tatoo_size
  .field
    = f.label :color
    = f.select :color, Profile::COLORS.map{|w| [get_profile_value(w), w]}, { include_blank: t('profiles.any_color') }
  .field
    = f.label :work_type
    = f.select :work_type, Profile::WORK_TYPES.map{|w| [get_profile_value(w), w]}, { include_blank: t('shared.select_choose') }
  .actions
    = f.submit 'Save'